{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./app",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["app/electron/**/*.ts", "app/backend/**/*.ts"],
  "exclude": ["app/frontend/**", "node_modules", "dist"]
}
